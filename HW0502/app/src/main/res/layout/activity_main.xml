<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7EFC5"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/chkburger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:checked="false"
        android:text="@string/burger"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chkcoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:checked="false"
        android:text="@string/coffee"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/img1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chkfries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:checked="false"
        android:text="@string/frenchFries"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkburger"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chkdrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:checked="false"
        android:text="@string/softDrink"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/img3"
        app:layout_constraintTop_toBottomOf="@+id/chkcoffee"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chksoup"
        android:layout_width="161dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="@string/soup"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkfries" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/chkburger"
        app:layout_constraintLeft_toRightOf="@+id/chkburger"
        app:layout_constraintTop_toTopOf="@+id/chkburger"
        app:srcCompat="@mipmap/burger"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/chkcoffee"
        app:layout_constraintLeft_toRightOf="@+id/chkcoffee"
        app:layout_constraintTop_toTopOf="@+id/chkcoffee"
        app:srcCompat="@mipmap/coffee"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/chkfries"
        app:layout_constraintLeft_toRightOf="@+id/chkfries"
        app:layout_constraintTop_toTopOf="@+id/chkfries"
        app:srcCompat="@mipmap/frenchfry"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/chkdrink"
        app:layout_constraintLeft_toRightOf="@+id/chkdrink"
        app:layout_constraintTop_toTopOf="@+id/chkdrink"
        app:srcCompat="@mipmap/softdrink"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="52dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/chksoup"
        app:layout_constraintStart_toEndOf="@+id/chksoup"
        app:layout_constraintTop_toTopOf="@+id/chksoup"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/soup" />

    <TextView
        android:id="@+id/showOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="108dp"
        android:layout_marginRight="16dp"
        android:text="請點餐"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkfries"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showOrder"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/output1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/burger"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/output2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/coffee"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/output3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/frenchfry"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/output4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/softdrink"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/output5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/soup" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>